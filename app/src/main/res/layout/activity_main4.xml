<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/dunes"
    tools:context="com.example.mahinour.bedouins.Main4Activity">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:padding="5dp">

        <ImageButton
            android:id="@+id/exitButton"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/close"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:clickable="false"
            android:onClick="PressX"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="4">

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="قصيدة تقال في الأفراح"
            android:textColor="@color/white"
            android:textSize="35dp"
            android:visibility="visible"/>

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:orientation="horizontal">

        <Button
            android:id="@+id/button5"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_gravity="center"
            android:layout_marginLeft="16dp"
            android:layout_weight="1"
            android:background="@drawable/rounded2"
            android:onClick="upToDown"
            android:text=""
            android:textAlignment="center"
            android:textSize="30dp" />

        <Button
            android:id="@+id/button4"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_gravity="center"
            android:layout_marginLeft="16dp"
            android:layout_weight="1"
            android:background="@drawable/rounded2"
            android:onClick="upToDown"
            android:text=""
            android:textAlignment="center"
            android:textSize="30dp" />

        <Button
            android:id="@+id/button3"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_gravity="center"
            android:layout_marginLeft="16dp"
            android:layout_weight="1"
            android:background="@drawable/rounded2"
            android:onClick="upToDown"
            android:text=""
            android:textAlignment="center"
            android:textSize="30dp" />

        <Button
            android:id="@+id/button2"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_gravity="center"
            android:layout_marginLeft="16dp"
            android:layout_weight="1"
            android:background="@drawable/rounded2"
            android:onClick="upToDown"
            android:text=""
            android:textAlignment="center"
            android:textSize="30dp" />

        <Button
            android:id="@+id/button1"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_gravity="center"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="7dp"
            android:layout_weight="1"
            android:background="@drawable/rounded2"
            android:onClick="upToDown"
            android:text=""
            android:textAlignment="center"
            android:textSize="30dp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:orientation="horizontal">

        <Button
            android:id="@+id/button14"
            android:layout_width="0dp"
            android:layout_height="70dp"
            android:layout_weight="1"
            android:onClick="downToUp"
            android:layout_gravity="center"
            android:layout_margin="1dp"
            android:textAlignment="center"
            android:visibility="visible"
            android:background="@drawable/rounded"
            android:text="أ"
            android:textSize="30dp"/>
        <Button
            android:id="@+id/button13"
            android:visibility="visible"
            android:layout_width="0dp"
            android:layout_height="70dp"
            android:layout_weight="1"
            android:onClick="downToUp"
            android:layout_gravity="center"
            android:layout_margin="1dp"
            android:background="@drawable/rounded"
            android:textAlignment="center"
            android:text="ش"
            android:textSize="30dp"/>
        <Button
            android:id="@+id/button12"
            android:layout_width="0dp"
            android:visibility="visible"
            android:layout_height="70dp"
            android:layout_weight="1"
            android:onClick="downToUp"
            android:layout_gravity="center"
            android:textAlignment="center"
            android:layout_margin="1dp"
            android:background="@drawable/rounded"
            android:text="ة"
            android:textSize="30dp"/>
        <Button
            android:id="@+id/button11"
            android:layout_width="0dp"
            android:layout_height="70dp"
            android:visibility="visible"
            android:layout_weight="1"
            android:onClick="downToUp"
            android:layout_gravity="center"
            android:layout_margin="1dp"
            android:background="@drawable/rounded"
            android:textAlignment="center"
            android:text="ي"
            android:textSize="30dp"/>
        <Button
            android:id="@+id/button10"
            android:layout_width="0dp"
            android:layout_height="70dp"
            android:background="@drawable/rounded"
            android:layout_weight="1"
            android:onClick="downToUp"
            android:visibility="visible"
            android:layout_gravity="center"
            android:textAlignment="center"
            android:layout_margin="1dp"
            android:text="ج"
            android:textSize="30dp"/>
        <Button
            android:id="@+id/button9"
            android:layout_width="0dp"
            android:background="@drawable/rounded"
            android:onClick="downToUp"
            android:layout_height="70dp"
            android:layout_weight="1"
            android:visibility="visible"
            android:layout_gravity="center"
            android:layout_margin="1dp"
            android:textAlignment="center"
            android:text="و"
            android:textSize="30dp"/>
        <Button
            android:id="@+id/button8"
            android:layout_width="0dp"
            android:layout_height="70dp"
            android:visibility="visible"
            android:background="@drawable/rounded"
            android:layout_weight="1"
            android:onClick="downToUp"
            android:layout_gravity="center"
            android:textAlignment="center"
            android:layout_margin="1dp"
            android:text="ت"
            android:textSize="30dp"/>
        <Button
            android:id="@+id/button7"
            android:layout_width="0dp"
            android:layout_height="70dp"
            android:layout_weight="1"
            android:onClick="downToUp"
            android:visibility="visible"
            android:layout_gravity="center"
            android:background="@drawable/rounded"
            android:layout_margin="1dp"
            android:textAlignment="center"
            android:text="ن"
            android:textSize="30dp"/>
    </LinearLayout>

    <TextView
        android:id="@+id/rightImage"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:textSize="30dp"
        android:text="لقد نجحت في إتمام الكلمة!!"
        android:layout_gravity="center_horizontal"
        android:visibility="invisible"/>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="2">

        <ImageButton
            android:id="@+id/nextButton"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:background="@drawable/arrow"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_margin="5dp"
            android:visibility="invisible"
            />
    </RelativeLayout>


</LinearLayout>
